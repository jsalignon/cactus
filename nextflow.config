
//// cactus version
params.cactus_version = "22.06.30"

cactus_version = params.cactus_version

//// analysis directories
params.cactus_dir =  "/home/jersal/workspace/cactus"

params {
  //// output
  out_dir     =  "results/${cactus_version}"
	pub_mode    = 'link'  
	
	//// allocated ressources 
	workMem     = '20G'
	nb_threads  = 6
	executor {
		queueSize = 50
		$local { 
      memory  = '100 GB' 
    }
	}

}

// configuration files
includeConfig 'conf/containers.config'
includeConfig 'conf/species.config'
includeConfig "conf/run_base.config"
custom_config = "${PWD}/conf/run_custom.config"
if(new File("${custom_config}").isFile()) includeConfig "${custom_config}"


//// species
params{
    bowtie2_indexes_contam = species[specie].bowtie2_indexes_contam
  	bowtie2_indexes        = species[specie].bowtie2_indexes
  	chromosomes_sizes      = species[specie].chromosomes_sizes
    cur_seqinfo            = species[specie].cur_seqinfo
  	effective_genome_size  = species[specie].effective_genome_size
  	kallisto_transcriptome = species[specie].kallisto_transcriptome
  	txdb                   = species[specie].txdb
  	df_genes_metadata      = species[specie].df_genes_metadata
  	df_genes_transcripts   = species[specie].df_genes_transcripts
  	promoters_df           = species[specie].promoters_df
  	promoters_bed          = species[specie].promoters_bed
  	blacklisted_regions    = species[specie].blacklisted_regions
  	org_db                 = species[specie].org_db
    refgene_ucsc_dir       = species[specie].refgene_ucsc_dir
  	chromatin_state        = species[specie].chromatin_state
  	pwms_motifs            = species[specie].pwms_motifs
  	homer_genome           = species[specie].homer_genome
    encode_chip_files      = species[specie].encode_chip_files
  	chip_ontology_groups   = species[specie].chip_ontology_groups
}


// tower token
tower {
	// accessToken = 'fd3114de75cc045443c804ffa7d7213e1fcf0c85' // KI
  accessToken = '3730e17fdb910dfab1b82c6b8217bdd43898e1f1' // hotmail
  enabled     = false
}

//// cache
resume = true
cache  = 'deep'

//// containers
singularity_containers_path = '/home/jersal/workspace/singularity_containers'
singularity {
  cacheDir = singularity_containers_path
  libraryDir = singularity_containers_path
	enabled    = true
	autoMounts = true
  // runOptions = "--containall --cleanenv --home ${PWD} --workdir tmp -B ${params.cactus_dir}"
  runOptions = "--containall --cleanenv --home ${PWD} --workdir ${params.cactus_dir}/tmp"
	// runOptions = "--containall --cleanenv --home ${PWD} -B ${params.cactus_dir}"
}



//// report files
import java.text.SimpleDateFormat
def date     = new Date()
sdf          = new SimpleDateFormat("MM-dd-yyyy_HH_mm_ss")
current_date = sdf.format(date)

timeline {
	enabled = true
	file    = "${params.out_dir}/Run_Info/${current_date}/timeline.html"
}

report {
	enabled = true
	file    = "${params.out_dir}/Run_Info/${current_date}/report.html"
}

dag {
	enabled = true
  file    = "${params.out_dir}/Run_Info/${current_date}/dag.html"
}




