
params.init_version = "20.09.21"

params.cactusdir = "/home/jersal/lluis/atac"
cactusdir = params.cactusdir

includeConfig "${cactusdir}/src/nextflow/containers.config"

// singularity parameters
singularity {
	enabled = true
	autoMounts = false
	runOptions = "--containall --cleanenv --home ${PWD} -B ${cactusdir}"
	// runOptions = "--containall --cleanenv --workdir . -B \'${cactusdir}\'"
	// runOptions = "--containall --cleanenv --workdir . -B  ${cactusdir}"
}

// cache parameters
resume = true
process {
	echo = false
	cache = 'deep'
}




