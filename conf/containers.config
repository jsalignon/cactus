profiles {
  docker {
    docker {
      enabled        = true
    }
    params.depot_url = "quay.io/biocontainers"
    enable_conda     = false
  }

  singularity {
    singularity {
      cacheDir       = params.singularity_images_dir
      libraryDir     = params.singularity_images_dir
      enabled        = true
      autoMounts     = true
      runOptions     = "--containall --cleanenv --home ${PWD} --workdir /dev/shm"
    }
    enable_conda     = false
    params.depot_url = "https://depot.galaxyproject.org/singularity/"
  }

  conda {
    conda {
      enabled      = true
    }
    enable_conda   = true
  }
}

process {
  //////// Single tool containers
  withLabel:fastqc {
    conda (params.enable_conda ? "bioconda::fastqc=0.11.7" : null)
    container = "${params.depot_url}/fastqc:0.11.7--4"
  }
  withLabel:picard {
    conda (params.enable_conda ? "bioconda::picard=2.26.9" : null)
    container = "${params.depot_url}/picard:2.26.9--hdfd78af_0"
  }
  withLabel:deeptools {
