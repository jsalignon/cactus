

manifest {
    name            = 'Bioninbo/cactus'
    author          = 'Salignon Jerome'
    homePage        = 'https://github.com/Bioninbo/cactus'
    description     = 'Cactus (Chromatin Accessibility and Transcriptomics Unification Software) is an open-source analysis pipeline for analyzing ATAC-Seq and mRNA-Seq data'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=22.05.0'
    version         = params.cactus_version
}


import java.text.SimpleDateFormat
def date     = new Date()
sdf          = new SimpleDateFormat("MM-dd-yyyy_HH_mm_ss")
current_date = sdf.format(date)

timeline {
	enabled = true
	file    = "${params.out_dir}/Run_Info/${current_date}/timeline.html"
}

report {
	enabled = true
	file    = "${params.out_dir}/Run_Info/${current_date}/report.html"
}

dag {
	enabled = true
  file    = "${params.out_dir}/Run_Info/${current_date}/dag.mmd"
}


resume = true
cache  = 'deep'

